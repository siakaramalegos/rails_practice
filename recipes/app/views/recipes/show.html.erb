<div class = "container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @recipe.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @recipe.description %>
  </p>

  <p>
    <strong>Source:</strong>
    <%= @recipe.source %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= @recipe.rating %>
  </p>

  <p>
    <strong>Recipe type:</strong>
    <%= @recipe.recipe_type %>
  </p>

  <%= link_to 'Edit', edit_recipe_path(@recipe), :class => "btn btn-default" %>
  <%= link_to 'Home', recipes_path, :class => "btn btn-default" %>
</div>

