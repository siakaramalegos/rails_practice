<div class = "container">
  <div class = "row">
    <h1>Projects</h1>
    <h2>The to do list app</h2>
  </div>
  <div class = "row">
    <table class = "table">
      <thead>
        <tr>
          <th>To Do</th>
          <th>Details</th>
          <th>Due Date</th>
          <th>Complete?</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @todos.each do |todo| %>
          <tr>
            <td><%= todo.title %></td>
            <td><%= todo.notes %></td>
            <td><%= todo.due %></td>
            <td><%= todo.done %></td>
            <td><%= link_to 'Show', todo, :class => "btn btn-default" %></td>
            <td><%= link_to 'Edit', edit_todo_path(todo), :class => "btn btn-default" %></td>
            <td><%= link_to 'Destroy', todo, :class => "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class = "row">
    <br>
    <%= link_to 'New Todo', new_todo_path, :class => "btn btn-default" %>
  </div>


</div>